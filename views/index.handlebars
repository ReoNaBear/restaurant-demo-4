<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- restaurant list -->
<div class="container mt-5">
  {{#if restaurants}}
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns row">
        {{#each restaurants}}
        <div class="card mb-3 col-3">
          <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{ this.name }}</h6>
            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{ this.category }}
            </div>
            <span class="badge badge-pill badge-danger font-weight-normal">
              {{ this.rating }}
              <i class="fas fa-star fa-xs"></i>
            </span>
          </div>
          <div class="d-flex justify-content-end">
            <div class="btn-group m-2" role="group" aria-label="Basic example">
              <a href="./restaurants/{{ this._id }}/edit">
                <i class="fas fa-edit"></i>
                <button type="button" class="btn btn-light">Edit</button>
              </a>
              <a href="./restaurants/{{ this._id }}">
                <i class="far fa-file-alt"></i>
                <button type="button" class="btn btn-light">Detail</button>
              </a>
              <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST">
                <i class="fas fa-trash-alt"></i>
                <button type="submit" class="btn btn-light">Delete</button>
              </form>
            </div>
          </div>

        </div>
        {{/each}}
      </div>
    </div>
  </div>
  {{else}}
  <div class="jumbotron d-flex flex-column align-items-center p-5 bg-light">
    <h1 class="display-4">搜尋不到符合的餐廳</h1>
    <p class="lead">嘗試輸入其他關鍵字</p>
    <a class="btn btn-primary btn-lg" href="/" role="button">返回首頁</a>
  </div>
  {{/if}}
</div>